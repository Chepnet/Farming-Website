@{

    ViewData["Title"] = "Training List";

}
    <div>
        <h2 class="alert-info" style="color:green">List of Training</h2>
    </div>
<div>

    <p>
        @Html.ActionLink("Search", "Search", "Home")
    </p>

    <table class="table">
        <tr>
            <th>
                Trainer Name
            </th>
            <th>
                Event Name
            </th>
            <th>
                Description
            </th>
            <th>
                Training Time
            </th>
            <th>
                Cost of Training
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.TrainerName
                </td>
                <td>
                    @item.EventName
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.TrainingTime
                </td>
                <td>
                    @item.Cost
                </td>
                <td>
                    @Html.ActionLink(" View Details", "Viewdetails", "Home",new { id = item.TrainingId })


                </td>
            </tr>
        }

    </table>
</div>